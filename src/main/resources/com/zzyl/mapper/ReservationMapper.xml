<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zzyl.mapper.ReservationMapper">
    <insert id="insert">
        insert into reservation(name,mobile,time,visitor,type,status,create_time,update_time,create_by,update_by)
        values(#{name},#{mobile},#{time},#{visitor},#{type},#{status},#{createTime},#{updateTime},#{userId},#{userId})
    </insert>

    <update id="updateStatus">
        update reservation set status=#{status},update_time=#{updateTime},update_by=#{userId} where id=#{id}
    </update>

    <select id="findPage" resultType="com.zzyl.pojo.Reservation">
        select * from reservation where create_by=#{userId}
        <if test="status!=null">
            and status=#{status}
        </if>
    </select>
</mapper>